
@{
    ViewBag.Title = "ProductInfo";
}

<style>
    a {
        text-decoration: none;
    }

    .product {
        background-color: #2b1b41;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        float: left;
        padding-right: var(--bs-breadcrumb-item-padding-x);
        color: #fff;
        content: var(--bs-breadcrumb-divider, ">");
    }

    .breadcrumb a {
        text-decoration: none;
        color: #fff;
    }

    .accordion {
        background-color: #fffacc;
    }

    .accordion-button:not(.collapsed) {
        background-color: #5b468b;
        color: #fff;
        border-radius: 10px;
    }

    .cartIcon {
        object-fit: contain;
        max-height: 20px;
    }


    .avatarA {
        border-radius: 50%;
    }
    
</style>

<div id="app">
    <!-- 頁首課程預覽 bg-->
    <div class="product mb-4 pt-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <nav aria-label="breadcrumb " class="root pt-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">首頁</a></li>
                        <li class="breadcrumb-item"><a href="#">分類</a></li>
                        <li class="breadcrumb-item active text-light" aria-current="page">
                            課程名稱
                        </li>
                    </ol>
                </nav>
                <img :src="Bookmark.currentImage()" alt="bookIcon" class="btn btn-sm img-fluid m-3 mt-1" style="max-height:38px" v-on:click="toggleBookmark"/>
            </div>
            
            <div class="row pb-5 justify-content-between">
                <div class="col-xs-12 col-md-6 col-lg-7 p-3">
                    <small class="text-light">教師 | {{courses.teacher}}</small>
                    <hr class="border" />
                    <h1 class="fw-bolder text-light">{{courses.name}}</h1>
                    <div class="d-lg-flex">
                        <p class="fs-1 fw-bolder text-light">NT${{courses.price}}</p>
                        <button class="buyBtn btn btn-xxl btn-warning fs-1 fw-bolder text-dark ms-lg-3">
                            立即購買
                        </button>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 col-lg-4">
                    <video ref="videoPlayer" controls :src="courses.video" muted type="video/mp4" class="container rounded-5"></video>
                </div>
            </div>
        </div>
    </div>
    <!-- 頁首課程預覽 end -->

    <div class="container">
        <div class="row justify-content-between">
            <!-- 左側資訊 bg-->
            <section class="col-md-7 col-lg-8 pe-5">
                <h2 class="fw-bolder">課程資訊</h2>
                <hr />
                <ul class="list-group list-group-horizontal">
                    <li class="list-group-item me-5 border-0">
                        總章節：{{courses.totalContent}}章
                    </li>
                    <li class="list-group-item border-0">
                        報名人數：{{courses.buyer}}人
                    </li>
                </ul>
                <hr />
                <h2 class="fw-bolder">課程介紹</h2>
                <p>{{courses.intro}}</p>
                <hr />
                <h2 class="fw-bolder">章節預覽</h2>
                <div v-for="content in courseContents"
                     :key="content.id"
                     class="accordion rounded-3 mb-4"
                     :id="'accordionExsemple'+'content.id'">
                    <div class="according-item">
                        <div class="accordion-header">
                            <button class="accordion-button collapsed"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    :data-bs-target="'#flush-collapse-' + content.id"
                                    aria-expanded="false"
                                    :aria-controls="'flush-collapse-' + content.id">
                                {{content.catalogName}}
                            </button>
                            <div :id="'flush-collapse-' + content.id"
                                 class="accordion-collapse collapse"
                                 data-bs-parent="#accordionFlushExample">
                                <div v-for="item in content.content"
                                     class="accordion-body fw-bolder">
                                    {{item.name}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <h2 class="fw-bolder">教師資訊</h2>
                <div class="teacher row mb-3 mt-2">
                    <img src="../images/profilePic2.PNG"
                         alt="taPic"
                         class="avatarA col-md-5 col-lg-3 col-sm-3 " />
                    <div class="teacherInfo m-2 col-md-6 col-sm-6 text-center text-sm-start"
                         style="height: 50%; align-self: center">
                        <h6>{{courses.teacher}}</h6>
                        <hr />
                        <p>{{courses.teackerInfo}}</p>
                    </div>
                </div>
            </section>
            <!-- 左側資訊 end-->
            <!-- 右側購買連結 bg -->
            <div class="col-md-5 col-lg-4">
                <div class="ps-3 pe-3 border rounded shadow">
                    <img src="../images/thumbnail.jpg"
                         alt="thumbnail"
                         class="img-fluid mt-3 mb-4 rounded" />
                    <h2>{{courses.name}}</h2>
                    <h2>NT${{courses.price}}</h2>
                    <div class="d-flex justify-content-between">
                        <button class="buyBtn btn btn-warning fs-2 fw-bolder text-dark mb-3 text-nowrap">
                            立即購買
                        </button>
                        <button class="rounded btn border mb-3">
                            <img src="../images/cart.png"
                                 alt="cart"
                                 class="cartIcon img-fluid" />
                        </button>
                    </div>
                </div>
            </div>
            <!-- 右側購買連結 end -->
        </div>
    </div>
 </div>
    @section scripts{
        <script src="~/Scripts/bootstrap.bundle.min.js"></script>
        <script src="~/Scripts/vue.global.js"></script>
        <script src="~/Scripts/myheader.js"></script>
        <script>
            const { createApp, ref, onMounted } = Vue;
            const config = {
                setup() {
                    const Bookmark = ref({
                        isBooked: false,
                        defaultImg: "../images/book_w.png",
                        bookedImg: "../images/booked_w.png",
                        currentImage() {
                            return this.isBooked ? this.bookedImg : this.defaultImg;
                        },
                    });

                    function toggleBookmark() {
                        Bookmark.value.isBooked = !Bookmark.value.isBooked;
                    }


                    //這裡呼叫查看收藏的api
                    /*const getBookedStatus = async () => {
                        try {
                            // 假設這是你的 API 端點
                            const response = await fetch('/api/checkBookmark');
                            const data = await response.json();
                            Bookmark.value.isBooked = data.isBookmarked; // 根據 API 回應設定
                        } catch (error) {
                            console.error('獲取收藏狀態時出錯:', error);
                        }
                    };*/

                    const videoPlayer = ref(null);
                    function checkVideoTime() {
                        if (videoPlayer.value && videoPlayer.value.currentTime >= 10) {
                            videoPlayer.value.currentTime = 0;
                        }
                    }
                    onMounted(() => {
                        if (videoPlayer.value) {
                            videoPlayer.value.addEventListener('timeupdate', checkVideoTime);
                        }
                    });
                    const courseContents = ref([
                        {
                            id: 1,
                            catalogName: "目錄一：目錄標題。",
                            content: [
                                { id: 1, name: "第一章節:標題" },
                                { id: 2, name: "第二章節:標題" },
                            ],
                        },
                        {
                            id: 2,
                            catalogName: "目錄二：目錄標題。",
                            content: [
                                { id: 1, name: "第一章節:標題" },
                                { id: 2, name: "第二章節:標題" },
                                { id: 3, name: "第三章節:標題" },
                            ],
                        },
                    ]);
                    const courses = ref({
                        video: "../video/testVideo2.mp4",
                        name: "課程名稱",
                        totalContent: 10,
                        buyer: 100,
                        price: "1000",
                        teacher: "Mr.C",
                        teackerInfo: "這裡是教師資訊頁裡的個人簡介",
                        intro: `有點遠她們台中避免客人搭配操作系統，
                              是從嚴格很有雙手打開貼圖，歐洲圖書館母親遇到
                              郵遞區號主動行情生日也要笑道女人，精選開放其實
                              書庫夏天緊張本地認證，最好的一名此次被人光臨倒是陽光，
                              工藝章節，歡迎我去本地下載常見規劃總體國內外構成檢索，
                              不喜歡保健讓她適用於。`,
                    });
                    return { courseContents, courses, videoPlayer, checkVideoTime, Bookmark, toggleBookmark };
                },
            };

            const app = createApp(config);
            app.mount("#app");
        </script>
    }
