
@{
    ViewBag.Title = "Checkout";
}

<link href="~/Content/media.css" rel="stylesheet" />

<style>
    .course-title {
        max-height: 150px;
        overflow: auto;
    }

    .credit-textbox {
        border-radius: 5px;
        border-width: 1px;
    }

    .cardNumber {
        width: 85%;
    }

    input[type="radio"] {
        appearance: none;
        -webkit-appearance: none;
        width: 15px;
        height: 15px;
        border: 2px solid #ccc;
        border-radius: 50%;
        outline: none;
        margin-right: 10px;
        cursor: pointer;
        position: relative;
    }

        input[type="radio"]:checked {
            border-color: #5b468b;
            background-color: white;
        }

            input[type="radio"]:checked::after {
                content: "";
                position: absolute;
                top: 2px;
                left: 2px;
                width: 7px;
                height: 7px;
                background-color: #5b468b;
                border-radius: 50%;
            }

    details {
        max-height: 300px;
        overflow: auto;
        scrollbar-width: thin;
        scrollbar-color: #5b468b #FFF;
    }

    summary {
        color: #5b468b;
        position: sticky;
        top: 0;
        background: white;
        z-index: 1;
    }

    .totalPointImg1 {
        max-height: 20px;
        max-width: 20px;
    }

    .totalPointImg2{
        max-height: 30px;
        max-width: 30px;
    }

    .member-point {
        width: 25px;
        height: 25px;
    }

    .confirmBtn {
        color: #fff;
        background-color: #5b468b;
    }

        .confirmBtn:hover {
            color: #fff;
            background-color: #342557 !important;
        }

    .alertImg {
        animation: squish 0.5s ease;
        transform-origin: bottom;
    }

    .modal {
        position: fixed;
        top: 0;
        left: 0;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1050;
    }

    .modal-content {
        width: 300px;
    }

</style>
<div id="app">

    @using Chimo.WebAPI.Site.Models
    @{
        bool isLoggedIn = AuthHelper.IsLoggedIn(Request);  // 檢查是否已登入
        var token = AuthHelper.GetTokenFromCookie();
        Chimo.WebAPI.Site.Models.EFModels.Member member = null;

        // 如果 token 存在，則解碼並獲取會員資料
        if (isLoggedIn)
        {
            member = JwtUtility.DecodeToken(token);
        }

        @* 警告modal *@
        <div class="modal" v-if="modal.isModalVisible">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header border-0 pb-0 mt-0">
                        <button type="button"
                                class="btn-close"
                                v-on:click="modal.hideModal()"></button>
                    </div>
                    <div class="text-center">
                        <img :src="modal.img"
                             alt="point"
                             class="alertImg mt-4"
                             style="max-width: 100px" />
                        <div class="modal-body">
                            <h5><pre class="mb-0" style="line-height:30px">{{modal.message}}</pre></h5>
                        </div>
                    </div>
                    <div class="text-center mb-4" v-if="hasCart">
                        <button class="confirmBtn btn btn-md ms-2 me-2"
                                v-on:click="modal.hideModal()">
                            返回
                        </button>
                        <a :href="`@Url.Action("TopUp", "Members")?returnUrl=@Url.Action("Checkout", "Members")`" 
                           class="btn btn-warning btn-md "
                           v-if="totalPrice > memberPoint">前往儲值</a>
                    </div>
                    <div class="text-center mb-4" v-if="!hasCart">
                        <button class="confirmBtn btn btn-md"
                                v-on:click="BackToLastPage">
                            返回
                        </button>
                    </div>

                </div>
            </div>
        </div>
        @* 警告modal *@

        <!-- 顯示立刻購買頁面start -->
        <div class="mb-4 pt-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <h4 class="fw-bolder ms-2 mt-2">
                            持有點數:
                            <img src="~/images/point.png"
                                 alt="memberPoint"
                                 class="member-point me-1 mb-1" />{{memberPoint}}
                        </h4>
                        <!-- 付款方式start -->
                        <h1 class="mt-5 fw-bolder mb-4">付款方式</h1>
                        <div class="border rounded shadow p-3 fw-bolder">
                            <label>
                                <input type="radio"
                                       value="point"
                                       v-model="selectedPayment"
                                       class="ms-2 mt-2" />
                                Chimo點數付款
                            </label>
                            <hr class="mt-4" />
                            <label>
                                <input type="radio"
                                       value="creditCard"
                                       v-model="selectedPayment"
                                       class="ms-2 mt-2" />
                                信用卡付款
                            </label>
                            <!-- 顯示信用卡表單start -->
                            <div v-if="selectedPayment === 'creditCard'"
                                 class="mt-3 credit-form">
                                <div class="m-3">
                                    <input type="text"
                                           id="cardNumber"
                                           placeholder="信用卡卡號"
                                           class="credit-textbox cardNumber p-2" />
                                </div>

                                <div class="m-3 row">
                                    <input type="text"
                                           id="expiryDate"
                                           placeholder="MM/YY"
                                           class="credit-textbox col-4 p-2 me-2" />
                                    <input type="text"
                                           id="cvv"
                                           placeholder="末三碼"
                                           class="credit-textbox col-4 p-2" />
                                </div>
                            </div>
                            <!-- 顯示信用卡表單end -->
                            <hr class="mt-4" />
                            <label>
                                <input type="radio"
                                       value="atm"
                                       v-model="selectedPayment"
                                       class="ms-2 mt-2" />
                                ATM轉帳
                            </label>
                            <hr class="mt-4" />
                            <label class="mb-2">
                                <input type="radio"
                                       value="store"
                                       v-model="selectedPayment"
                                       class="ms-2" />
                                超商繳費
                            </label>
                        </div>
                        <!-- 付款方式end -->
                        <!-- 發票資料start -->
                        <h1 class="mt-5 fw-bolder mb-4">發票資料</h1>
                        <div class="border rounded shadow p-3 fw-bolder">
                            <label>
                                <input type="radio"
                                       value="creditCard"
                                       v-model="selectedReceipt"
                                       class="ms-2 mt-2" />
                                電子發票
                            </label>
                            <hr class="mt-4" />
                            <label>
                                <input type="radio"
                                       value="atm"
                                       v-model="selectedReceipt"
                                       class="ms-2" />
                                捐贈發票
                            </label>
                            <hr class="mt-4" />
                            <label class="mb-2">
                                <input type="radio"
                                       value="store"
                                       v-model="selectedReceipt"
                                       class="ms-2 mt-2" />
                                統編發票
                            </label>
                        </div>
                        <!-- 發票資料end -->
                        <!-- 聯絡資料start -->
                        <h1 class="mt-5 fw-bolder mb-4">聯絡資料</h1>
                        <div class="border rounded shadow p-3 fw-bolder mb-5">
                            <div class="mb-3 contact-form">
                                <label for="realName" class="form-label">真實姓名</label>
                                <input type="text" class="form-control" id="realName" />
                            </div>

                            <div class="mb-3 contact-form">
                                <label for="phone" class="form-label">連絡電話</label>
                                <input type="text" class="form-control" id="phone" />
                            </div>

                            <div class="mb-3 contact-form">
                                <label for="email" class="form-label">聯絡信箱</label>
                                <input type="email" class="form-control" id="email" />
                            </div>

                            <div class="mb-3" style="font-size: 14px">
                                <p>電子發票、課程相關通知會寄送到此信箱</p>
                            </div>
                        </div>
                        <!-- 聯絡資料end -->
                    </div>

                    <!-- 訂單明細start -->
                    <div class="isPc col-md-5 mb-4">
                        <div class="confirmBuying container border shadow p-4 rounded">
                            <h3 class="fw-bolder">訂單明細</h3>
                            <hr />
                            <details class="ms-2">
                                <summary class="fw-bolder pointer-event pb-2">查看詳細訂單明細</summary>
                                <div class="d-lg-flex mb-3" v-for="item in cartItems">
                                    <img :src="formatThumbnailRoute(item.course.thumbnail,'course')"
                                         alt="courseImg"
                                         class="img-fluid col-lg-3 rounded mb-3 me-3"
                                         style="max-width: 150px" />
                                    <div class="text-wrap">
                                        <h5 class="course-title fw-bolder">{{item.course.title}}</h5>
                                    </div>
                                </div>
                            </details>

                            <div v-if="selectedPayment!=='point'">
                                <div class="d-flex justify-content-between mt-2">
                                    <h6 class="fw-bolder">商品小計</h6>
                                    <h6 class="fw-bolder">NT${{totalPrice}}</h6>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <h3 class="fw-bolder">總金額</h3>
                                    <h3 class="fw-bolder">NT${{totalPrice}}</h3>
                                </div>
                                <hr />
                            </div>

                            <div v-if="selectedPayment==='point'">
                                <div class="d-flex justify-content-between mt-2">
                                    <h6 class="fw-bolder">商品小計</h6>
                                    <h6 class="fw-bolder">
                                        <img src="~/images/point.png"
                                             alt="totalPointImg"
                                             class="me-2 mb-1 totalPointImg1" />{{totalPrice}}
                                    </h6>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <h3 class="fw-bolder">總點數</h3>
                                    <h3 class="fw-bolder">
                                        <img src="~/images/point.png"
                                             alt="totalPointImg"
                                             class="me-2 mb-1 totalPointImg2" />{{totalPrice}}
                                    </h3>
                                </div>
                                <hr />
                            </div>

                            <div class="row me-3">
                                <button class="btn btn-warning p-3 m-3 mt-2"
                                        v-on:click="handleConfirmOrder">
                                    確認付款
                                </button>
                            </div>
                            <div class="text-center">
                                <small class="fw-bolder">
                                    確認購買即表示您以詳閱
                                    &lt;Chimo!用戶交易條款&gt;，並同意條款內容。
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 訂單明細end -->

                <div class="isMobile col-md-5 mb-4">
                    <div class="confirmBuying border shadow p-4 rounded">
                        <div class="d-flex justify-content-between" v-if="selectedPayment!=='point'">
                            <h3 class="fw-bolder">總金額</h3>
                            <h3 class="fw-bolder">NT${{totalPrice}}</h3>
                        </div>
                        <div class="d-flex justify-content-between" v-if="selectedPayment==='point'">
                            <h3 class="fw-bolder">總金額</h3>
                            <h3 class="fw-bolder">
                                <img src="~/images/point.png"
                                     alt="totalPointImg"
                                     class="me-2 mb-1 totalPointImg2" />{{totalPrice}}
                            </h3>
                        </div>
                        <hr />
                        <div class="row me-3">
                            <button class="btn btn-warning p-3 m-3 mt-2"
                                    v-on:click="handleConfirmOrder">
                                確認付款
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- 顯示立刻購買頁面end -->
        </div>
    }
</div>
<script src="~/Scripts/bootstrap.bundle.min.js"></script>
<script src="~/Scripts/vue.global.js"></script>
<script src="~/Scripts/myheader.js"></script>
<script>
    const { createApp, ref, onMounted } = Vue;
    const config = {
        setup() {
            const memberId = @Html.Raw(Json.Encode(member?.Id));
            const urlParams = new URLSearchParams(window.location.search);
            const returnUrl = urlParams.get('returnUrl') || '/Home/Index';
            const BackToLastPage = () => {
                window.location.href = returnUrl;
            }
            const cartItems = ref([]);
            const totalPrice = ref(0);
            const memberPoint = ref(0);
            const hasCart = ref(true);

            const modal = ref({
                message: "",
                img: "",
                isTopUp: false,
                isModalVisible: false,
                showModal() {
                    this.isModalVisible = true;
                },
                hideModal() {
                    this.isModalVisible = false;
                },
            });

            const fetchCartItems = async () => {
                try {
                    const response = await fetch(`/api/carts/${memberId}`, {
                        method: 'GET',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });

                    // 確保請求成功後解析 JSON
                    if (response.ok) {
                        const data = await response.json();
                        if (data.length === 0) {
                            hasCart.value = false;
                            return;
                        }    

                        cartItems.value = data.cartItems;
                        totalPrice.value = getTotalPrice(cartItems.value);
                    } else {
                        console.error('fetch 購物車清單失敗:', response.statusText);
                    }
                } catch (error) {
                    console.error('fetch 購物車清單失敗:', error);
                }
            };

            const fetchMemberPoint = async () => {
                try {
                    const response = await fetch(`/api/profile/${memberId}`, {
                        method: 'GET',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });

                    if (response.ok) {
                        const result = await response.json();
                       
                       memberPoint.value = result.memberPoint;
                    } else {
                        console.error('fetch 會員點數失敗:', response.statusText);
                    }
                } catch (error) {
                    console.error('fetch 會員點數失敗:', error);
                }
            }

            const getTotalPrice = (cards) => {
                return cards.reduce((total, card) => total + card.course.price, 0);
            };

            const formatThumbnailRoute = (thumbnailPath, target = "people") => {

                thumbnailPath = handleThumbnailNull(thumbnailPath, target);

                if (thumbnailPath.startsWith("~/")) {
                    // 將 "~/" 替換為實際的程式根目錄
                    return thumbnailPath.replace("~", window.location.origin);
                }
                return thumbnailPath;
            };

            const handleThumbnailNull = (path, target) => {
                if (path == null || path.length == 0) { // 如果thumbnail是null 或沒有內容

                    // 判斷target是人(teacher 或 member) 或是課程，給予不同的default圖片路徑
                    target === "people" ? path = "~/images/profilePic.PNG"
                        : path = "~/images/thumbnail.jpg"; // 設成default thumbnail
                }

                return path;
            }

            const handleConfirmOrder = async () => {
                if (!hasCart.value) {
                    modal.value.message = "目前訂單裡沒有內容";
                    modal.value.img = "/images/alert.gif";
                    modal.value.showModal();
                    return;
                }

                if (totalPrice.value > memberPoint.value) {
                    modal.value.message = "點數餘額不足";
                    modal.value.img = "/images/alert.gif";
                    modal.value.showModal();
                    return;
                }

                try {
                    const response = await fetch('/api/checkout/confirm', {
                        method: 'POST', 
                        headers: {
                            'Content-Type': 'application/json' 
                        },
                        body: JSON.stringify({
                            memberId: memberId
                        }) 
                    });

                    if (!response.ok) {
                        throw new Error(`網路錯誤: ${response.status}`);
                    }

                    const result = await response.json();

                    if (result.success) {
                        modal.value.message = "付款成功";
                        modal.value.img = "/images/ok.gif";
                        modal.value.showModal();
                        hasCart.value = false;
                    } else {
                        modal.value.message = "付款失敗，請稍後再試";
                        modal.value.img = "/images/ok.gif";
                        modal.value.showModal();
                    }
                } catch (error) {
                    console.error('付款時發生錯誤:', error);
                    modal.value.message = "付款時發生錯誤，請稍後再試";
                    modal.value.img = "/images/error.gif";
                    modal.value.showModal();
                }
            }

            const selectedPayment = ref("");

            const selectedReceipt = ref("");

            onMounted(() => {
                fetchCartItems();
                fetchMemberPoint();
            });

            return {
                selectedPayment, selectedReceipt, cartItems, totalPrice,
                formatThumbnailRoute, handleConfirmOrder, memberPoint, modal,
                hasCart, BackToLastPage
            };
        },
    };
    const app = createApp(config);
    app.mount("#app");
</script>